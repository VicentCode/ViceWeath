<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="cardMiniWeather">
        <item name="cardBackgroundColor">#12FFFFFF</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="cardMiniWeatherTime">
        <item name="cardBackgroundColor">#FDFDFD</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">1dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="tvDataMini">
       <item name="android:textColor">#FFF</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="tvDataNameMini">
        <item name="android:textColor">#BDBDBD</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="tvDataMiniDark">
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="tvDataNameMiniDark">
        <item name="android:textColor">#424242</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="tvTodayLight">
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>


    <style name="tvNextDaysLight">
        <item name="android:textColor">#5D6DF5</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">true</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">?android:attr/colorControlHighlight</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAlignment">textStart</item>
    </style>

</resources>